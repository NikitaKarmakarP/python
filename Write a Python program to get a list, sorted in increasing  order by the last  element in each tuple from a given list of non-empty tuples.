def sort_tuples_by_last_element(tuple_list): 
    # Use a lambda function as the key for sorting 
    sorted_list = sorted(tuple_list, key=lambda x: x[-1]) 
    return sorted_list 
 
# Example usage: 
my_list = [(2, 5), (1, 2), (4, 4), (2, 3), (2, 1)] 
result = sort_tuples_by_last_element(my_list) 
print("List sorted by the last element in each tuple:", result)
